{
    "compilerOptions": {
        "noEmit": true,
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "jsx": "react",
        "sourceMap": true,

        "typeRoots": [
            "../node_modules/@webgpu/types",
            "../node_modules/@types"
        ],

        "baseUrl": ".",
        "paths": {
            "client/*": [ "./*" ],
            "@ff/core/*": [ "../libs/core/src/*" ],
            "@ff/browser/*": [ "../libs/browser/src/*" ],
            "@ff/ui/*": [ "../libs/ui/src/*" ],
            "@ff/lit/*": [ "../libs/lit/src/*" ],
            "@ff/geo/*": [ "../libs/geo/src/*" ],
            "@ff/gpu/*": [ "../libs/gpu/src/*" ],
        }
    },
    "include": [
        "./**/*"
    ]
}
