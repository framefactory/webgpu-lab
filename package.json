{
  "name": "webgpu-lab",
  "version": "1.0.0",
  "license": "MIT",
  "description": "WebGPU experiments",
  "homepage": "https://github.com/framefactory/webgpu-lab#readme",
  "contributors": [
    {
      "name": "Ralph Wiedemeier",
      "email": "opensource@framefactory.ch",
      "url": "https://github.com/framefactory"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/framefactory/webgpu-lab.git"
  },
  "bugs": {
    "url": "https://github.com/framefactory/webgpu-lab/issues"
  },
  "type": "module",
  "packageManager": "pnpm@7.13.3",
  "scripts": {
    "build": "pnpm run build:prod",
    "build:dev": "cd src; NODE_ENV=development webpack --mode=development --env component=all",
    "build:prod": "cd src; NODE_ENV=production webpack --mode=production --env component=all",
    "dev": "cd src; NODE_ENV=development webpack serve --mode=development --env component=default"
  },
  "dependencies": {
    "@ffweb/browser": "workspace:*",
    "@ffweb/core": "workspace:*",
    "@ffweb/geo": "workspace:*",
    "@ffweb/gpu": "workspace:*",
    "@ffweb/lit": "workspace:*",
    "@ffweb/ui": "workspace:*",
    "gl-matrix": "^3.4.3",
    "lit": "^2.4.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@webgpu/types": "^0.1.23",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "handlebars": "^4.7.7",
    "handlebars-loader": "^1.7.2",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.1",
    "mkdirp": "^1.0.4",
    "node-sass": "^7.0.3",
    "prettier": "^2.7.1",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "sass-loader": "^13.1.0",
    "source-map-loader": "^4.0.1",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  }
}